{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "typeRoots": ["node_modules/@types", "node_modules/types"],

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
